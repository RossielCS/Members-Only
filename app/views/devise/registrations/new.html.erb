

<div class="w-1/3 my-16 mx-auto shadow-lg rounded">
<h2 class="text-center text-3xl p-4">Sign up</h2>
<div class="bg-white  px-8 pt-6 pb-8 mb-4 ">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="field">
    <div class="pt-4"><%= f.label :email %></div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
  </div>
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autocomplete: "username",class:"bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" ,class:"bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"%>
  </div>

  <div class="actions my-4">
    <%= f.submit "Sign up" , class:"bg-purple-800 text-white font-bold text-xl px-4 py-2 my-3 shadow-lg rounded-lg hover:bg-purple-600"%>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>


</div>