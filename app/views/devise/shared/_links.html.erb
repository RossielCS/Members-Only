<%- if controller_name != 'sessions' %>
  <div  class="my-4"><%= link_to "Log in", new_session_path(resource_name), class:"bg-purple-800 text-white font-bold text-xl px-4 py-2 m-3 shadow-lg rounded-lg hover:bg-purple-600"%><br /></div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
   <div  class="my-4"><%= link_to "Sign up", new_registration_path(resource_name),class:"bg-purple-800 text-white font-bold text-xl px-4 py-2 m-3 shadow-lg rounded-lg hover:bg-purple-600" %><br /></div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
   <div  class="my-4"><%= link_to "Forgot your password?", new_password_path(resource_name),class:"bg-purple-800 text-white font-bold text-xl px-4 py-2 m-3 shadow-lg rounded-lg hover:bg-purple-600" %><br /></div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
   <div  class="my-4"><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name),class:"bg-purple-800 text-white font-bold text-xl px-4 py-2 m-3 shadow-lg rounded-lg hover:bg-purple-600" %><br /></div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
   <div  class="my-4"><%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name),class:"bg-purple-800 text-white font-bold text-xl px-4 py-2 m-3 shadow-lg rounded-lg hover:bg-purple-600" %><br /></div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
   <div  class="my-4">  <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider),class:"bg-purple-800 text-white font-bold text-xl px-4 py-2 m-3 shadow-lg rounded-lg hover:bg-purple-600" %><br /></div>
  <% end %>
<% end %>
