<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
<link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <div class="sign-in m-4 flex justify-end">
    <%if user_signed_in? %>      
      <%= link_to 'Log Out', destroy_user_session_path, method: :delete,class:"bg-purple-800 text-white font-bold text-xl p-4 m-3 shadow-lg rounded-lg hover:bg-purple-600"%>      
    <% else %>
      <%= link_to 'Sign Up', new_user_registration_path ,class:"bg-purple-800 text-white font-bold text-xl p-4 m-3 shadow-lg rounded-lg hover:bg-purple-600" %>
      <%= link_to 'Sign In', new_user_session_path, class:"bg-purple-800 text-white font-bold text-xl p-4 m-3 shadow-lg rounded-lg hover:bg-purple-600"  %>
    <%end%>
    </div>
    <%= yield %>
  </body>
</html>
